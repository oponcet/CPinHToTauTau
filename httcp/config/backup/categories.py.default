        name="tautau_rho_rho",
        id=303,
        selection="sel_tautau_rho_rho",
        label="tautau_rho_rho",
    )
    # --> a1(DM2) - a1(DM2)
    add_category(
        config,
        name="tautau_a1_1pr_2pi0_a1_1pr_2pi0",
